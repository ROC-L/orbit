include(cmake_common)

C_FLAGS=-march=sandybridge -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer -D_FORTIFY_SOURCE=2 -fstack-protector-all -fsanitize=address
CXX_FLAGS=-march=sandybridge -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer -fsized-deallocation -D_FORTIFY_SOURCE=2 -fstack-protector-all -fno-exceptions -fsanitize=address
LD_FLAGS=-Wl,-z,relro,-z,now,-z,noexecstack -fsanitize=address

[settings]
os=Linux
os_build=Linux
arch=x86_64
arch_build=x86_64

[env]
CFLAGS=$C_FLAGS
CXXFLAGS=$CXX_FLAGS
LDFLAGS=$LD_FLAGS
